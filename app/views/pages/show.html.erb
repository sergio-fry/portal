<article class="ipfs-page" data-ipfs-url="<%= ipfs_page_url(@page) %>">
  <p class="post-meta">
    <%= content_tag :link, nil, rel: :prefetch, href: @page.ipfs_content.url, as: :fetch %>
    <%= link_to "admin", admin_path(@page) if policy(:admin).index? %>
    <%= link_to "edit", edit_page_path(@page) if policy(@page).edit? %>
    <br/>
    <%= link_to @page.updated_at, history_page_path(@page), datetime: @page.updated_at, title: "History" %>
    <br/>
    <span><%= link_to "Sergei O. Udalov", "/" %></span>
  </p>
  <div>
    <%= raw @page.processed_content %>
  </div>

  <br>
  <br>
  <br>
</article>
