<script src="https://cdnout.com/autosize.js"></script>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>

<%= form_with(model: page, url: page.exists? ? page_url(page) : new_page_url, method: :put) do |form| %>
  <% if page.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :slug, style: "display: block" %>
    <%= form.text_field :slug %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, class: "editor" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<style>
</style>

<script>
  autosize($('.editor'));
</script>
